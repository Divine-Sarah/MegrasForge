// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id              String          @id @map("_id") @default(uuid())
  active          Boolean         @default(true)
  fullName String   @map(name: "full_name")
  email           String          @unique
  username        String
  password        String
  created_at      DateTime        @default(now())
  deleted_at      DateTime?
  updated_at      DateTime        @updatedAt

  @@map(name: "users")
}

model Topic {
  id  String @id @map("_id") @default(uuid())
  category String
  topic    String
  description String
}


model Recipe {
  id String @id @map("_id") @default(uuid())
  title String
  ingredients String
  instructions String
  image   String
}


model Comments {
id              String          @id @map("_id") @default(uuid())
  user_id String
}



